{
  "name": "estimation-invoice-maker",
  "version": "1.0.0",
  "description": "Google Apps Script for creating and sending estimation and invoice documents",
  "main": "Code.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clasp:login": "clasp login",
    "clasp:create": "clasp create --type standalone",
    "clasp:push": "npm run build && clasp push",
    "clasp:deploy": "npm run build && clasp push && clasp deploy",
    "deploy": "npm run build && clasp push"
  },
  "keywords": [
    "google-apps-script",
    "typescript",
    "invoice",
    "estimation",
    "pdf"
  ],
  "author": "physicskt",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.83",
    "typescript": "^5.0.0"
  }
}